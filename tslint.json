{
  "rulesDirectory": ["node_modules/codelyzer"],
  "rules": {
    "ordered-imports": {
      "options": {
        "grouped-imports": true,
        "import-sources-order": "lowercase-last",
        "named-imports-order": "lowercase-last",
        "module-source-path": "full"
      }
    },
    "object-literal-sort-keys": [false, "ignore-blank-lines", "ignore-case", "match-declaration-order-only"],
    "curly": [true, "ignore-same-line"],
    "no-submodule-imports": [
      true,
      "@angular",
      "rxjs/Rx",
      "rxjs/index",
      "rxjs/operators",
      "core-js/es7/reflect",
      "zone.js",
      "protractor"
    ],
    "member-access": [true, "check-accessor", "check-constructor", "check-parameter-property"],
    "prefer-const": true,
    "member-ordering": [
      true,
      {
        "order": [
          "private-constructor",
          "protected-constructor",
          "public-constructor",
          "private-static-field",
          "protected-static-field",
          "public-static-field",
          "private-static-method",
          "protected-static-method",
          "public-static-method",
          "private-instance-field",
          "protected-instance-field",
          "public-instance-field",
          "private-instance-method",
          "protected-instance-method",
          "public-instance-method"
        ]
      }
    ],
    "no-string-literal": true,
    "prefer-object-spread": true,
    "no-var-keyword": true,
    "comment-format": [true, "check-space", "check-uppercase", "allow-trailing-lowercase"],
    "no-angle-bracket-type-assertion": true,
    "array-type": [true, "array"],
    "no-this-assignment": [
      true,
      {
        "allowed-names": ["^self$", "^\\$this$"],
        "allow-destructuring": true
      }
    ],
    "ban-types": false,
    "max-classes-per-file": [true, 1],
    "prefer-conditional-expression": true,
    "no-shadowed-variable": true,
    "variable-name": {
      "options": ["ban-keywords", "check-format", "require-const-for-all-caps", "allow-leading-underscore"]
    },
    "triple-equals": true,
    "only-arrow-functions": true,
    "no-duplicate-switch-case": true,
    "no-unused-expression": true,
    "no-implicit-dependencies": false,
    "prefer-for-of": true,
    "no-empty": true,
    "jsdoc-format": [true, "check-multiline-start"],
    "no-object-literal-type-assertion": true,
    "no-duplicate-imports": true,
    "interface-name": [true, "always-prefix"],
    "no-console": [true, "log"],
    "no-debugger": true
  },
  "extends": ["tslint:latest", "tslint-config-prettier"]
}
